		//var name="jumlah["+counter+"]";
		//$('.jumlah'+counter).val(z);
		$("input[name="+name+"]").val(z);
		//$("#grand_total").val(g_total)
		
        for(var i in inp){
            if(inp[i].type == "text"){
                if (inp[i].value!=''){
                    if(inp[i].id=='jumlah'){
                        totalJum=totalJum + parseFloat(inp[i].value);
                    }
                } 
            }
         }
		$("#grand_total").val(totalJum);
		
}		
