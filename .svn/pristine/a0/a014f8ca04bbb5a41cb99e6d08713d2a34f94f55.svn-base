		$data = array();
		$no=0;
		foreach ($renja as $row) {			
			$no++;
			$checked = (!empty($renjas) && in_array($row->id, $renjas))?"checked":"";
			$data[] = array(
							$no, 
							$row->tujuan,
							$row->sasaran,
							$row->indikator_sasaran,
