		$order_arr = array('id','tujuan','sasaran','indikator_sasaran', '','nm_urusan','nm_bidang','ket_program','ket_kegiatan', 'status_renja');
		$renja = $this->m_renja_trx->get_all_renja($search, $start, $length, $order["0"], $id_skpd, $order_arr, "BARU");
