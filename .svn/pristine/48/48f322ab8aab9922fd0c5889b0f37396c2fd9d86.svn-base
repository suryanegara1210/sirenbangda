                    $('#id_akun').attr("disabled",true);
                    $.ajax({
                            type: "POST",
                            url : "<?php echo site_url('tup/select_akun_test')?>",
                            data: dataString,
                            success: function(msg){
                                $('#akun').html(msg);
                            }
                      });
                }
				
        });
       </script>