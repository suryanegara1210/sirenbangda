<input type="hidden" name="kdoutput" value="<?php echo"$kdoutput" ?>">  
<script type="text/javascript">
          $("#kdkomponen").change(function(){
                var selectValues = $("#kdkomponen").val();
                if (selectValues == 0){
                    var msg = "<select name=kdoutput ><option value=<?php echo "$kdoutput";?>>Pilih Komponen Dahulu</option></select>";
                    $('#akun').html(msg);
                }else{
                    var kdkomponen = {kdkomponen:$("#kdkomponen").val(),kdoutput:'<?php echo"$kdoutput" ?>'};
                    $('#id_akun').attr("disabled",true);
                    $.ajax({
                           type: "POST",
                            url : "<?php echo site_url('unit/select_countsubkomponen')?>",
                            data: kdkomponen,
                            success: function(msg){
                               count = msg;	
							   var A = '';
							   var B = '';
								//alert(count);
							   if(count==0){ 
							   	   $('#val').val(0);
								   A = "<?php echo site_url('unit/select_akun')?>";
								   B = '#akun';
								   $('#kdskomponen').val(0);  
								   $('#kdskomponen').attr("disabled",true);
								   //document.getElementById('#subkomponen').style.display="none";
							   }else{
								   $('#val').val(1);
								   $('#kdakun').val(0);
								   $('#id_header').val(0);    
								   A = "<?php echo site_url('unit/select_subkomponen')?>";
								   B = '#subkomponen';
							   }
							   		$.ajax({
										type: "POST",
										url : A,
										data: kdkomponen,
										success: function(msg){
											$(B).html(msg);
										}
									});
                            }
                      });
                }
        });
       </script>