	function do_veri(){
		$this->auth->restrict();
		$id = $this->input->post('id');
		$bulan = $this->input->post('bulan');
		$action = $this->input->post('action');

		$data['cik'] = $this->m_cik_perubahan->get_one_cik_veri($id);
		$cik = $data['cik'];
		$data['indikator'] = $this->m_cik_perubahan->get_indikator_prog_keg($cik->id, TRUE, TRUE);
		if ($action=="pro") {
			$data['program'] = TRUE;
		}else{
			$data['program'] = FALSE;
		}
		$data['bulan'] = $bulan;

		//file upload

		$selector_file = "file_".$bulan;
		$mp_filefiles				= $this->get_file(explode( ',', $this->db->query("select ".$selector_file." from tx_cik_prog_keg where id ='".$id."'")->row()->$selector_file), TRUE);
		$data['mp_jmlfile']			= $mp_filefiles->num_rows();
		$data['mp_filefiles']		= $mp_filefiles->result();

		$this->load->view('cik_perubahan/verifikasi/veri', $data);
	}

	function save_veri(){
		$this->auth->restrict();
		$id = $this->input->post("id");
		$bulan = $this->input->post("bulan");
		$veri = $this->input->post("veri");
		$ket = $this->input->post("ket");

		if ($veri == "setuju") {
			$result = $this->m_cik_perubahan->approved_cik($id,$bulan);
		}elseif ($veri == "tdk_setuju") {
			$result = $this->m_cik_perubahan->not_approved_cik($id,$bulan,$ket);
		}

		if ($result) {
			$msg = array('success' => '1', 'msg' => 'Kegiatan berhasil diverifikasi.');
			echo json_encode($msg);
		}else{
			$msg = array('success' => '0', 'msg' => 'ERROR! Kegiatan gagal diverifikasi, mohon menghubungi administrator.');
			echo json_encode($msg);
		}
	}

