		$length = $this->input->post("length");
		$order = $this->input->post("order");

		$cik = $this->m_cik_perubahan->get_data_table($search, $start, $length, $order["0"]);
		$alldata = $this->m_cik_perubahan->count_data_table($search, $start, $length, $order["0"]);

