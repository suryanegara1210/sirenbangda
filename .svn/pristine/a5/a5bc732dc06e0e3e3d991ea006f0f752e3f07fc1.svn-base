	function delete_rka() 
	{  
        $id = $this->input->post('id');
        
        $result = $this->m_rka->delete_rka($id);
        if ($result) {
			$msg = array('success' => '1', 'msg' => 'RKA berhasil dihapus.');
			echo json_encode($msg);			
		}else{
			$msg = array('success' => '0', 'msg' => 'ERROR! RKA gagal dihapus, mohon menghubungi administrator.');
			echo json_encode($msg);			
		}
	}
