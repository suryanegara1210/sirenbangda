    		$data['kriteria_keberhasilan'] = $result->kriteria_keberhasilan;
    		$data['ukuran_keberhasilan'] = $result->ukuran_keberhasilan;
    		$data['triwulan'] = $result->triwulan;
    		$data['pagu'] = $result->pagu;
