                type: "POST",
                url : "<?php echo site_url('bukti_akuntansi/semua_daftar');?>",
                data: { jen_bkt: jen_bkt, bulan:bulan, bulan2:bulan2, status: status, role: role, sort: sort, jsort: jsort, search: search},
                success: function(msg){
                    $('#data').html('');
                    $('#data').html(msg);
                }
        });
    }

    ambildata();
</script>
