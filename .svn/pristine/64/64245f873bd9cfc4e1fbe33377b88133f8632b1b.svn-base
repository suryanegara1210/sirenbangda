<script type="text/javascript">
    function ambildata(){
        var jen_bkt= $("#jen_bkt").val();
        var bulan= $("#bulan").val();
        var bulan2= $("#bulan2").val();
        var status= $("#status").val();        
        var role= $("#role").val();
        var sort= $("#sort").val();
        var jsort= $("#jsort").val();
        var search= $("#search").val();
