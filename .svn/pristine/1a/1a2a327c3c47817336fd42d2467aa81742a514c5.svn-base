	function delete_cik() 
	{  
        $id = $this->input->post('id');
        
        $result = $this->m_cik->delete_cik($id);
        if ($result) {
			$msg = array('success' => '1', 'msg' => 'CIK berhasil dihapus.');
			echo json_encode($msg);			
		}else{
			$msg = array('success' => '0', 'msg' => 'ERROR! CIK gagal dihapus, mohon menghubungi administrator.');
			echo json_encode($msg);			
		}
	}
}